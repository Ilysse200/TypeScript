{
  "compilerOptions": {
    "module": "ES6",        // Output ESM
    "target": "ESNext",        // Target latest JS version
    "moduleResolution": "node", // Resolve modules as Node.js does
    "esModuleInterop": true,   // Allow default imports from CJS modules
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./src/dist",        // Output directory
    "rootDir": "./src",        // Source directory
    "baseUrl": "./",
    "paths": {
      "*": ["src/dist/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
